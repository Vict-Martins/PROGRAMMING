#include <stdio.h>
#define MAX 99999
int main(){
while(1){

double v[MAX];
int c = 0,cr = 0,z=0,i = 0,n = 0;




while(1){
     scanf("%lf",&v[z]);

     if(v[z] >= 0 && v[z] <=10){
        c++;
        z++;
     }
     else
        cr++;

    if(c == 2)
        break;
}
for(i = 0; i < cr ; i++){
    printf("nota invalida\n");
}
printf("media = %.2lf\n",(v[0]+v[1])/2);

while(1){
        printf("novo calculo (1-sim 2-nao)\n");
        scanf("%d",&n);
        if(n == 1 || n == 2)
            break;
    }
    if(n==2)
        break;
}

return 0;
}
