#include <stdio.h>
#include <stdlib.h>


main (){

int n = 0, i = 0, x = 0,menor = 0,posicao = 0;

scanf("%d",&n);

for(i = 0;i < n;i++){
   scanf("%d",&x);

        if(x<menor){
            menor = x;
            posicao = i;
        }
}

printf("Menor valor: %d\nPosicao: %d\n",menor,posicao);


return 0;
}
