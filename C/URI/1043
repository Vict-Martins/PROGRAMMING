    #include <stdio.h>
    #include <math.h>


    int main(){

    double A,B,C,AREA;
    scanf("%lf %lf %lf",&A,&B,&C);

    if(A<B+C && B<C+A && C<B+A){
        AREA = A+B+C;
        printf("Perimetro = %.1lf\n",AREA);
    }
    else{
        AREA = (A+B)*C/2.0;
        printf("Area = %.1lf\n",AREA);

    }


      return 0;
    }


